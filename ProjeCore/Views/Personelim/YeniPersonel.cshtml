@model ProjeCore.Models.Personel
@{
    ViewData["Title"] = "YeniPersonel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form class="form-group" method="post">

    <b>Personel Adı</b>
    @Html.TextAreaFor(x => x.Ad, new { @class = "form-control" })
    <br />
    <b>Personel Soyadı</b>
    @Html.TextAreaFor(x => x.Soyad, new { @class = "form-control" })
    <br />
    <b>Personel Sehir</b>
    @Html.TextAreaFor(x => x.Sehir, new { @class = "form-control" })
    <br />
    <b>Personel Birim</b>
    @Html.DropDownListFor(x=>x.Birim.BirimID,(List<SelectListItem>
    )ViewBag.dgr,new{@class="form-control"})
    <br />


    <button class="btn btn-primary"> Personel Ekle</button>



</form>
